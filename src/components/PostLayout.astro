---
import Layout from "../layouts/Layout.astro";
interface Props {
  frontmatter: { title: string; date: string; slug: string };
}
const { title, date } = Astro.props.frontmatter;
---

<Layout page="blog" title={title}>
  <article class="prose prose-sm mx-auto my-5 md:prose-base">
    <div class="flex justify-between text-gray-900 dark:text-gray-400">
      <span
        >{
          Intl.DateTimeFormat("en-US", { dateStyle: "medium" }).format(
            new Date(date),
          )
        }</span
      >
      <a href="/"
        ><svg
          class="inline-block"
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="currentColor"
          viewBox="0 0 16 16"
        >
          <path
            fill-rule="evenodd"
            d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8"
          ></path>
        </svg>
        {" "}back to home</a
      >
    </div>
    <slot />
  </article>
</Layout>
