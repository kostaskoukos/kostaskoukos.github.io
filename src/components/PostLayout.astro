---
import Layout from "../layouts/Layout.astro";
interface Props {
  frontmatter: { title: string; date: string; slug: string };
}
const { title, date } = Astro.props.frontmatter;
---

<Layout page="blog" title={title}>
  <article class="prose prose-sm mx-auto my-5 md:prose-base">
    <div class="flex justify-between text-gray-900 dark:text-gray-400">
      <span
        >{
          Intl.DateTimeFormat("en-US", { dateStyle: "medium" }).format(
            new Date(date),
          )
        }</span
      >
      <span>Kostas Koukos</span>
    </div>
    <slot />
  </article>
</Layout>
