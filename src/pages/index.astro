---
import Layout from "../layouts/Layout.astro";
import Link from "../components/Link.astro";

const posts: { frontmatter: { title: string; date: string; slug: string } }[] =
  Object.values(import.meta.glob("./blog/*.md", { eager: true })).sort(
    (a: any, b: any) => {
      return (
        new Date(b.frontmatter.date).valueOf() -
        new Date(a.frontmatter.date).valueOf()
      );
    },
  ) as { frontmatter: { title: string; date: string; slug: string } }[];

const projects = [
  {
    title: "Portfolio",
    description:
      "The website you are looking at, built with Astro, Bun and Tailwind",
    url: "kostaskoukos.github.io",
  },
  {
    title: "Rust Guess",
    description:
      "A simple guessing game written in Rust, to gain experience in buiding CLIs and experiment in Rust",
    url: "rust-guess",
  },
  {
    title: "Sky's Adventure",
    description:
      "My first (published) 2D platformer game in Unity for a school competition",
    url: "sky-s-adventure",
  },
  {
    title: "Urban Dict",
    description:
      "Urban dictionary clone for greek and engilsh slang term community definitions",
    url: "urban-dict",
  },
  {
    title: "Slash Bot",
    description: "Discord bot with slash commands, written in Go",
    url: "slash-bot",
  },
];
---

<Layout page="index" title="Kostas' Portfolio">
  <main class="px-4 py-4">
    <div class="flex flex-col gap-3">
      <h1
        class="inline-block bg-[linear-gradient(to_right,theme(colors.primary),theme(colors.accent))] bg-clip-text text-4xl font-black text-[transparent] drop-shadow-sm md:text-5xl"
      >
        Kostas Koukos
      </h1>
      <p>Meet your next favorite full-stack developer!</p>
      <h2
        class="inline-block bg-[linear-gradient(to_right,theme(colors.primary),theme(colors.accent))] bg-clip-text text-3xl font-semibold text-[transparent]"
      >
        About me.
      </h2>
      <p>
        I am a young developer in Greece passionate about anything
        softwate-related. I am currently focusing on web development, but I want
        to dive deeper into the magic of computer science. What I bring to the
        table is problem-solving skills, willingness to evolve as a developer
        and excellent communication skills!
      </p>
      <h2
        class="inline-block bg-[linear-gradient(to_right,theme(colors.primary),theme(colors.accent))] bg-clip-text text-3xl font-semibold text-[transparent]"
      >
        Things I have built.
      </h2>
      <ul class="relative list-none space-y-6 px-4 pb-8">
        <div
          class="absolute bottom-0 left-[21px] top-0 w-[2px] bg-text opacity-50"
          aria-hidden="true"
        >
        </div>
        {
          projects.map((project) => (
            <li class="relative flex items-center gap-3">
              <div
                class="h-3 min-w-3 rounded-full bg-text"
                aria-hidden="true"
              />
              <div>
                <Link class="text-lg md:text-xl" href={project.url}>
                  {project.title}{" "}
                </Link>
                <svg
                  class="inline-block"
                  width="22"
                  height="22"
                  xmlns="http://www.w3.org/2000/svg"
                  class="hover:scale-110"
                  viewBox="0 0 496 512"
                >
                  <path
                    fill="currentColor"
                    d="M165.9 397.4c0 2-2.3 3.6-5.2 3.6-3.3 .3-5.6-1.3-5.6-3.6 0-2 2.3-3.6 5.2-3.6 3-.3 5.6 1.3 5.6 3.6zm-31.1-4.5c-.7 2 1.3 4.3 4.3 4.9 2.6 1 5.6 0 6.2-2s-1.3-4.3-4.3-5.2c-2.6-.7-5.5 .3-6.2 2.3zm44.2-1.7c-2.9 .7-4.9 2.6-4.6 4.9 .3 2 2.9 3.3 5.9 2.6 2.9-.7 4.9-2.6 4.6-4.6-.3-1.9-3-3.2-5.9-2.9zM244.8 8C106.1 8 0 113.3 0 252c0 110.9 69.8 205.8 169.5 239.2 12.8 2.3 17.3-5.6 17.3-12.1 0-6.2-.3-40.4-.3-61.4 0 0-70 15-84.7-29.8 0 0-11.4-29.1-27.8-36.6 0 0-22.9-15.7 1.6-15.4 0 0 24.9 2 38.6 25.8 21.9 38.6 58.6 27.5 72.9 20.9 2.3-16 8.8-27.1 16-33.7-55.9-6.2-112.3-14.3-112.3-110.5 0-27.5 7.6-41.3 23.6-58.9-2.6-6.5-11.1-33.3 2.6-67.9 20.9-6.5 69 27 69 27 20-5.6 41.5-8.5 62.8-8.5s42.8 2.9 62.8 8.5c0 0 48.1-33.6 69-27 13.7 34.7 5.2 61.4 2.6 67.9 16 17.7 25.8 31.5 25.8 58.9 0 96.5-58.9 104.2-114.8 110.5 9.2 7.9 17 22.9 17 46.4 0 33.7-.3 75.4-.3 83.6 0 6.5 4.6 14.4 17.3 12.1C428.2 457.8 496 362.9 496 252 496 113.3 383.5 8 244.8 8zM97.2 352.9c-1.3 1-1 3.3 .7 5.2 1.6 1.6 3.9 2.3 5.2 1 1.3-1 1-3.3-.7-5.2-1.6-1.6-3.9-2.3-5.2-1zm-10.8-8.1c-.7 1.3 .3 2.9 2.3 3.9 1.6 1 3.6 .7 4.3-.7 .7-1.3-.3-2.9-2.3-3.9-2-.6-3.6-.3-4.3 .7zm32.4 35.6c-1.6 1.3-1 4.3 1.3 6.2 2.3 2.3 5.2 2.6 6.5 1 1.3-1.3 .7-4.3-1.3-6.2-2.2-2.3-5.2-2.6-6.5-1zm-11.4-14.7c-1.6 1-1.6 3.6 0 5.9 1.6 2.3 4.3 3.3 5.6 2.3 1.6-1.3 1.6-3.9 0-6.2-1.4-2.3-4-3.3-5.6-2z"
                  />
                </svg>
                <p class="opacity-80">{project.description}</p>
              </div>
            </li>
          ))
        }
      </ul>
      <h2
        class="inline-block bg-[linear-gradient(to_right,theme(colors.primary),theme(colors.accent))] bg-clip-text text-3xl font-semibold text-[transparent]"
      >
        Things I have written.
      </h2>
      <ul class="relative list-none space-y-7 px-4 pb-6">
        <div
          class="absolute bottom-0 left-[21px] top-0 w-[2px] bg-text opacity-50"
          aria-hidden="true"
        >
        </div>
        {
          posts.map((post) => (
            <li class="relative">
              <div class="flex items-center">
                <div
                  class="z-10 size-3 rounded-full bg-text"
                  aria-hidden="true"
                />
                <div class="ml-3 flex items-baseline">
                  <Link
                    href={"/blog/" + post.frontmatter.slug}
                    class="text-balance text-lg font-medium md:text-xl"
                  >
                    {post.frontmatter.title}
                  </Link>
                  &nbsp;
                  <span class="text-sm text-secondary">â€¢</span>
                  &nbsp;
                  <time
                    class="text-balance text-sm opacity-80"
                    datetime={post.frontmatter.date}
                  >
                    {post.frontmatter.date.split("T")[0]}
                  </time>
                </div>
              </div>
            </li>
          ))
        }
      </ul>
    </div>
  </main>
</Layout>
